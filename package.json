{
  "name": "view-in-chrome",
  "displayName": "View in Chrome",
  "description": "Open html files in Chrome",
  "version": "0.0.2",
  "publisher": "lina",
  "engines": {
    "vscode": "^1.10.0"
  },
  "icon": "view-in-chrome-logo.png",
  "categories": [
    "Other"
  ],
  "keywords": [
    "view",
    "open",
    "chrome",
    "open in chrome",
    "preview in chrome",
    "browser",
    "html",
    "preview html",
    "open html" 
  ],
  "activationEvents": [
    "onCommand:extension.openChrome"
  ],
  "main": "./out/src/extension",
  "contributes": {
    "commands": [
      {
        "command": "extension.openChrome",
        "title": "View In Chrome"
      },
      {
        "command": "extension.openChromeFromMenu",
        "title": "View In Chrome"
      }
    ],
    "keybindings": [{
      "command": "extension.openChrome",
      "key": "Ctrl+Cmd+H"
    }],
    "menus": {
      "explorer/context": [{
        "when": "resourceLangId == html",
        "command": "extension.openChromeFromMenu",
        "group": "view-in-chrome"
      }],
      "editor/context": [{
          "when": "resourceLangId == html",
          "command": "extension.openChrome",
          "group": "view-in-chrome"
      }]
  }
  },

  "scripts": {
    "vscode:prepublish": "tsc -p ./",
    "compile": "tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "node ./node_modules/vscode/bin/test"
  },
  "devDependencies": {
    "typescript": "^2.0.3",
    "vscode": "^1.0.0",
    "mocha": "^2.3.3",
    "@types/node": "^6.0.40",
    "@types/mocha": "^2.2.32"
  },
  "dependencies": {
    "opn": "^4.0.2"
  }
}
